<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="WonderLab.Views.TaskView">
	<Panel>
		<ScrollViewer Margin="10">
			<StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Name="infopanel"></StackPanel>
		</ScrollViewer>
		<StackPanel Name="nullText" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False">
			<TextBlock TextAlignment="Center" Opacity="0.65" FontWeight="Bold" FontSize="26" Text="没有新任务"/>
			<!--<TextBlock FontSize="18" Text="转到下载里面给我找点事吧" Opacity="0.65" TextAlignment="Center"/>-->
		</StackPanel>
	</Panel>
</UserControl>
